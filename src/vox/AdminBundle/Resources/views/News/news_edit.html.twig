{% extends "voxAdminBundle:Admin:main.html.twig" %}

{% block title %}Edit News{% endblock %}
{% block content_title %}<h1>Edit News</h1>{% endblock %}

{% block content %}


    {#<form>
        <textarea class="tinymce"></textarea>
    </form>#}



    {{ form_start(form) }}


    <div class="form-group">
        <label>Title: </label>
        {{ form_widget(form.title) }}
    </div>

    <div class="form-group">
        <label>Content: </label>
        {{ form_widget(form.content) }}
    </div>

    <div class="form-group">
        <label>Enable:
            {{ form_widget(form.enable) }}
        </label>
    </div>

    {{ form_widget(form.save) }}
    {{ form_end(form) }}
    {{ tinymce_init() }}

{% endblock %}

