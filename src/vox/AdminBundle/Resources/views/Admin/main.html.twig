{% extends "voxAdminBundle::base.html.twig" %}

{% block body %}


<div id="global">

    <div id="header">
        <a class="voxadmin" href="{{ path('admin_dashboard') }}">Vox Admin</a>

        <a class="logout" href="{{ path('fos_user_security_logout') }}"><i class="fa fa-power-off"></i> Logout</a>
    </div>

    <div id="navigation">
        <ul class="menu">
            <li {% if app.request.get('_route') ends with 'admin_dashboard' %} class="active"{% endif %}><a href="{{ path('admin_dashboard') }}"><i class="fa fa-dashboard"></i>  Dashboard</a></li>
            <li {% if app.request.get('_route') ends with 'admin_news' %} class="active"{% endif %}><a href="{{ path('news_index') }}"><i class="fa fa-pencil-square-o"></i>  News</a></li>
            <li {% if app.request.get('_route') ends with 'artist_index' %} class="active"{% endif %}><a href="{{ path('artist_index') }}"><i class="fa fa-users"></i> Artists</a></li>
            <li {% if app.request.get('_route') ends with 'release_index' %} class="active"{% endif %}><a href="{{ path('release_index') }}"><i class="glyphicon glyphicon-play-circle"></i> Releases</a></li>
            <li {% if app.request.get('_route') ends with 'newsletter' %} class="active"{% endif %}><a href="{{ path('newsletter_index') }}"><i class="fa fa-envelope-o"></i> Newsletter</a></li>
            <li {% if app.request.get('_route') ends with 'media' %} class="active"{% endif %}><a href="{{ path('admin_media') }}"><i class="fa fa-share-alt-square"></i> Social Media</a></li>
            <li {% if app.request.get('_route') ends with 'traffic_index' %} class="active"{% endif %}><a href="{{ path('traffic_index') }}"><i class="fa fa-bar-chart"></i> Traffic</a></li>
        </ul>

    </div>

    <div id="content">
        {% block content_title %}{% endblock %}
        {% for message in app.session.flashbag.get('notice') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <i class="fa fa-check"></i>

            {{ message }}
        </div>
        {% endfor %}
        {% block content %}{% endblock %}
    </div>


</div>

{% endblock %}