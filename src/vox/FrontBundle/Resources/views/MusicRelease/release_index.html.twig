{% extends "voxFrontBundle:Front:main.html.twig" %}

{% block title %}Releases{% endblock %}
{% block content_title %}<h1>Releases</h1>{% endblock %}

{% block content %}

    {% for release in listReleases %}
        {% if release.enabled %}
        <div class="release">
            <h2>{{ release.artistName }} - {{ release.title }}</h2>
            {% if release.image.webPath is defined %}<img height="100" width="100" src="{{ asset(release.image.webPath) }}" alt="{{ release.title }}"/>{% endif %}
            <p>{{ release.description }}</p>
        </div>
        {% endif %}
    {% endfor %}

{% endblock %}